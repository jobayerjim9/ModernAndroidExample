<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ModernAndroidDevelopmentExample" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryBlue</item>
        <!-- Darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Background color for the app's content -->
        <item name="android:windowBackground">@color/backgroundWhite</item>
        <!-- Text color for the app's toolbar and text elements -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Accent color for UI controls -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>

        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorSecondary">@color/white</item>
        <item name="android:titleTextColor">@color/black</item>
    </style>

    <style name="Theme.ModernAndroidDevelopmentExample" parent="Base.Theme.ModernAndroidDevelopmentExample" />
</resources>