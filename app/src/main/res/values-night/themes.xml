<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.KickoffByZujuInterview" parent="Theme.Material3.DayNight.NoActionBar">
        <item  name="colorPrimary">@color/primaryBlue</item>
    <!-- Darker variant for the status bar and contextual app bars in dark mode -->
        <item name="colorPrimaryDark">@color/primaryBlue</item>
    <!-- Background color for the app's content in dark mode -->
        <item name="android:windowBackground">@color/backgroundDark</item>
    <!-- Text color for the app's toolbar and text elements in dark mode -->
        <item name="android:textColorPrimary">@color/white</item>
    <!-- Accent color for UI controls in dark mode -->
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorSecondary">@color/black</item>
        <item name="android:titleTextColor">@color/white</item>
    </style>
</resources>